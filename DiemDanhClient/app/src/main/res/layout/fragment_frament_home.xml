<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".frament_home"
    android:layout_marginBottom="60dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/white"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/backgroud_header"
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:background="@drawable/banner_logo" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:text="NỀN TẢNG VỮNG MẠNH \n CHO TƯƠNG LAI THÀNH CÔNG"
            android:textColor="@color/white"
            android:background="@color/Blue_cd"
            android:gravity="center"
            android:layout_toRightOf="@+id/backgroud_header"
            android:textStyle="bold"/>



    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_marginTop="60dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/viewpager2_loading_img"
                android:layout_width="match_parent"
                android:layout_height="200dp"/>

            <me.relex.circleindicator.CircleIndicator3
                android:id="@+id/circle_viewpage"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                app:ci_drawable="@drawable/bg_viewpage"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Truy cập nhanh"
                android:textStyle="bold"
                android:layout_marginRight="115dp"
                android:textSize="18sp"
                android:textColor="@color/Blue"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:src="@drawable/duongkengang"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/style"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="10dp"
                android:backgroundTint="@color/WhiteSmoke"
                android:layout_below="@+id/circle_viewpage">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/btn_callform_tkb"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="20dp"
                        android:src="@drawable/classroom" />
                    <TextView
                        android:id="@+id/view1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/btn_callform_tkb"
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="5dp"
                        android:text="Thời khóa biểu"
                        android:textColor="@color/black"
                        android:textStyle="bold"/>

                    <ImageView
                        android:id="@+id/btn_callform_history"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="20dp"
                        android:layout_toRightOf="@+id/btn_callform_tkb"
                        android:src="@drawable/icon_history" />

                    <TextView
                        android:id="@+id/lichsutkb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/btn_callform_tkb"
                        android:layout_marginStart="44dp"
                        android:layout_marginLeft="44dp"
                        android:layout_marginTop="5dp"
                        android:layout_toEndOf="@+id/view1"
                        android:layout_toRightOf="@+id/view1"
                        android:text="Lịch sử ĐD"
                        android:textColor="@color/black"
                        android:textStyle="bold"/>
                    <ImageView
                        android:id="@+id/btn_callform_profile"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="20dp"
                        android:layout_toRightOf="@+id/btn_callform_history"
                        android:src="@drawable/icon_profile" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/btn_callform_tkb"
                        android:layout_marginStart="42dp"
                        android:layout_marginLeft="155dp"
                        android:layout_marginTop="5dp"
                        android:layout_toEndOf="@+id/lichsutkb"
                        android:layout_toRightOf="@+id/view1"
                        android:text="TT Cá Nhân"
                        android:textColor="@color/black"
                        android:textStyle="bold"/>
                </RelativeLayout>

            </androidx.cardview.widget.CardView>


        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tin tức"
                android:textStyle="bold"
                android:textColor="@color/Blue"
                android:layout_marginLeft="30dp"
                android:textSize="18sp"
                android:layout_marginBottom="5dp"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:src="@drawable/duongkengang"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"/>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/img_tintuc1"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:src="@drawable/tintuc3"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_toRightOf="@id/img_tintuc1"
                android:layout_marginTop="18dp"
                android:layout_marginLeft="5dp"
                android:textSize="16dp"
                android:text="Thông tin “sinh viên HUTECH trở lại Trường từ 13/12” là tin giả"/>

            <ImageView
                android:id="@+id/img_tintuc2"
                android:layout_below="@id/img_tintuc1"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:src="@drawable/tintuc4"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_below="@+id/img_tintuc1"
                android:layout_toRightOf="@id/img_tintuc2"
                android:layout_marginTop="28dp"
                android:layout_marginLeft="5dp"
                android:textSize="16dp"
                android:text="Tips Hướng nghiệp - Học Ngôn ngữ, ngoài Biên - Phiên dịch còn nghề nào hấp dẫn?"/>

        </RelativeLayout>
    </LinearLayout>





</FrameLayout>