<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/profile_img"
        android:layout_width="208dp"
        android:layout_height="163dp"
        android:layout_marginTop="4dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:lottie_autoPlay="true"
        app:lottie_fileName="profile1.json"
        app:lottie_loop="true"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/profile_txtname"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/edittext_profile"
        android:text="Your name"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textAlignment="viewStart"
        android:padding="5dp"
        android:layout_marginTop="20dp"
        app:layout_constraintWidth_percent=".8"
        android:drawableLeft="@drawable/ic_name"
        android:drawablePadding="18dp"
        android:elevation="3dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profile_img" />

    <TextView
        android:id="@+id/profile_txtbirthday"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/edittext_profile"
        android:drawableLeft="@drawable/ic_birthday"
        android:drawablePadding="18dp"
        android:elevation="3dp"
        android:text="Birthday"
        android:textColor="@color/black"
        android:padding="5dp"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/profile_txtname"
        app:layout_constraintWidth_percent=".8" />

    <TextView
        android:id="@+id/profile_txtmunber"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/edittext_profile"
        android:drawableLeft="@drawable/ic_phone"
        android:drawablePadding="18dp"
        android:elevation="3dp"
        android:text="Phone Number"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:padding="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/profile_txtbirthday"
        app:layout_constraintWidth_percent=".8" />

    <TextView
        android:id="@+id/profile_txtaddress"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/edittext_profile"
        android:drawableLeft="@drawable/ic_location"
        android:drawablePadding="10dp"
        android:elevation="3dp"
        android:text="Address"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:padding="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profile_txtmunber"
        app:layout_constraintWidth_percent=".8" />

    <TextView
        android:id="@+id/profile_txtemail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/edittext_profile"
        android:drawableLeft="@drawable/ic_email"
        android:drawablePadding="10dp"
        android:elevation="3dp"
        android:text="Email"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:padding="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profile_txtaddress"
        app:layout_constraintWidth_percent=".8" />

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@+id/profile_txtemail"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/btn_callupdateprofile"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="12dp"
            android:background="@drawable/blue_fill__rounded_color"
            android:fontFamily="@font/poppins_medium"
            android:gravity="center"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="Cập nhật"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/profile_txtemail"
            tools:ignore="MissingConstraints"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="0dp"/>

        <TextView
            android:id="@+id/btn_doimk"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="0dp"
            android:background="@drawable/blue_fill__rounded_color"
            android:backgroundTint="@color/Blue_cd"
            android:fontFamily="@font/poppins_medium"
            android:gravity="center"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="Đổi mật khẩu"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_callupdateprofile"
            tools:ignore="MissingConstraints"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="0dp"/>

        <TextView
            android:id="@+id/btn_logout"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:background="@drawable/blue_fill__rounded_color"
            android:backgroundTint="@color/Red"
            android:fontFamily="@font/poppins_medium"
            android:gravity="center"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="Đăng xuất"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_callupdateprofile"
            tools:ignore="MissingConstraints"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="0dp"/>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>