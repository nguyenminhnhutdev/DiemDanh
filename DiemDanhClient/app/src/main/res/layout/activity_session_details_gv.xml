<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SessionDetailsGV">

    <RelativeLayout
        android:id="@+id/backgroud_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white">

        <ImageView
            android:id="@+id/btn_backctbh"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:src="@drawable/ic_back"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:text="Chi tiết buổi học"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold" />

    </RelativeLayout>

    <TextView
        android:id="@+id/txt_tenmonhocgv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/backgroud_title"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:fontFamily="sans-serif"
        android:text="Tên môn học: Lập trình trên thiết bị di động"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_mamh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_tenmonhocgv"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:fontFamily="sans-serif"
        android:text="Mã môn học: CMP195"
        android:textColor="@color/black"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/txt_tietbatdaugv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_mamh"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:fontFamily="sans-serif"
        android:text="Tiết bắt đầu: 7"
        android:textColor="@color/black"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/txt_tietgv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_tietbatdaugv"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:fontFamily="sans-serif"
        android:text="Tiết: 7-11"
        android:textColor="@color/black"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/txt_thugv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_tietgv"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:fontFamily="sans-serif"
        android:text="Thứ: 2"
        android:textColor="@color/black"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/txt_maphonggv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_thugv"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:fontFamily="sans-serif"
        android:text="Mã phòng: E1-02.03"
        android:textColor="@color/black"
        android:textSize="20dp" />
    <TextView
        android:id="@+id/txt_ngayhocgv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_maphonggv"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:text="Tiết: 7-11"
        android:fontFamily="sans-serif"
        android:textSize="20dp"
        android:textColor="@color/black"/>
    <TextView
        android:id="@+id/txt_lopgv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_ngayhocgv"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:text="Lớp: 18DTHXX"
        android:fontFamily="sans-serif"
        android:textSize="20dp"
        android:textColor="@color/black"/>
    <TextView
        android:id="@+id/txt_hockygv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_lopgv"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:text="Học kỳ: 1"
        android:fontFamily="sans-serif"
        android:textSize="20dp"
        android:textColor="@color/black"/>


    <TextView
        android:id="@+id/btn_diemdanhgv"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_hockygv"
        android:layout_marginLeft="62dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="62dp"
        android:background="@drawable/blue_fill__rounded_color"
        android:fontFamily="@font/poppins_medium"
        android:gravity="center"
        android:paddingTop="14dp"

        android:paddingBottom="14dp"
        android:text="Điểm danh"
        android:textColor="@color/white"
        android:textSize="16dp"/>


</RelativeLayout>