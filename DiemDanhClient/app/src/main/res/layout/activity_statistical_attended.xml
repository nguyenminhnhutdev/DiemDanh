<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.StatisticalAttended">

    <TextView
        android:id="@+id/txt_sourceCourse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Course"
        android:textSize="16dp"
        android:textStyle="bold">

    </TextView>

    <TextView
        android:id="@+id/txt_Group_Statiscal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_sourceCourse"
        android:text="Course"
        android:textStyle="bold"
        android:textSize="16dp">

    </TextView>
<LinearLayout
    android:id="@+id/lineLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_below="@+id/txt_Group_Statiscal">
    <TextView
        android:id="@+id/txt_Quantity_Tittle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Số lượng sinh viên:"
        android:textStyle="bold"
        android:textSize="16dp"
        android:layout_marginRight="10dp">

    </TextView>

    <TextView
        android:id="@+id/txt_Quantity_Statiscal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="41"
        android:textStyle="bold"
        android:textSize="16dp">

    </TextView>


</LinearLayout>

    <ListView
        android:id="@+id/listView_Statiscal"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_below="@+id/lineLayout"
        android:layout_marginTop="18dp"></ListView>
</RelativeLayout>